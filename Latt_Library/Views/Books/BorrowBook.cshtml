@model Latt_Library.Models.BookModelViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>BorrowBook</h1>


<form asp-controller="books" asp-action="Index" method="get">
    <p>
        <label for="BookName">Name:</label>
        <select asp-for="BookName" asp-items="Model.Name">
            <option value="All"></option>
        </select>
        <input type="submit" value="Filter" />



        @*
        Name:<select asp-for="BookName" asp-items="Model.Name">
            <option value="">All</option> 
            </select>
            <input type="submit" value="Filter" />*@

        @*Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />*@
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-controller="BookLenders" asp-action="Create">Borrow</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
