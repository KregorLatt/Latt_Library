@model Latt_Library.Models.Book

@{
    ViewData["Title"] = "AddBook";
}

<h1>AddBook</h1>

<h4>Fill in the blanks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentDays" class="control-label"></label>
                <input asp-for="RentDays" class="form-control" />
                <span asp-validation-for="RentDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="AddBook" class="btn btn-primary" />
                <a asp-action="LenderBorrows"></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
